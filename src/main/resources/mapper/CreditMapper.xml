<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.reward_project.credit.mapper.CreditMapper">

    <resultMap id="CreditResultMap" type="com.reward_project.credit.entity.Credit">
        <id property="id" column="id"/>
        <result property="type" column="type"/>
        <result property="subType" column="sub_type"/>
        <result property="icon" column="icon"/>
        <result property="source" column="source"/>
        <result property="stock" column="stock"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="addCredit" resultMap="CreditResultMap">
        insert into `credit` (`type`, `sub_type`, `icon`, `source`, `stock`, `status`, `create_time`, `update_time`)
        values
        (#{type}, #{subType}, #{icon}, #{source}, #{stock}, #{status}, now(), now())
    </select>

    <select id="updateCredit" resultMap="CreditResultMap">
        update `credit`
        set
        `icon` = #{icon},
        `stock` = #{stock},
        `status` = #{status},
        `update_time` = now()
        where `type` = #{type}
        AND `sub_type` = #{subType}
    </select>

    <select id="queryByType" resultMap="CreditResultMap">
        SELECT *
        FROM `credit`
        where `type` = #{type}
        AND `sub_type` = #{subType}
    </select>

    <select id="queryByTypeForUpdate" resultMap="CreditResultMap">
        SELECT *
        FROM `credit`
        where `type` = #{type}
        AND `sub_type` = #{subType}
        FOR UPDATE
    </select>

    <select id="queryByStatus" resultMap="CreditResultMap">
        SELECT *
        FROM `credit`
        where status = #{status}
    </select>

    <select id="queryBySource" resultMap="CreditResultMap">
        SELECT *
        FROM `credit`
        where source = #{source}
    </select>

</mapper>